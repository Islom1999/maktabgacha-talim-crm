<div class="pagetitle">
    <h1>{{title}}</h1>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Groups</h2>
                    <p class="text-center">Guruhlarni qo'shish</p>
                    <!-- Bordered Table -->
                    <!-- Button trigger modal -->
                    <div class="text-center">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                            Guruh qo'shish
                        </button>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Qo'shish</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <form action="/admin/group/create" method="post">
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="">Guruh nomini kiriting</label>
                                            <input class="form-control" type="text" name="title">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="">Guruh haqida malumot kiriting</label>
                                            <textarea class="form-control" name="descr"></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="">Guruh tarbiyachisini kiriting</label>
                                            <select class="form-select" name="workers" id="">
                                                {{#each workers}}
                                                <option value="{{_id}}">{{fullname}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Qaytish</button>
                                        <button type="submit" class="btn btn-primary">Qo'shish</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- End Bordered Table -->
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Groups</h2>
                    <p>Guruhlar ro'yhati</p>
                    <!-- Bordered Table -->
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nomi</th>
                                <th scope="col">Guruh haqida malumot</th>
                                <th scope="col">Tarbiyachi</th>
                                <th scope="col">O'zgartirish</th>
                                <th scope="col">O'chirish</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each groups}}
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{title}}</td>
                                <td>{{descr}}</td>
                                <td>{{workers.fullname}}</td>
                                <td>
                                    <button class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#update-{{_id}}">O'zgartirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="update-{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Qo'shish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <form action="/admin/group/update/{{_id}}" method="post">
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh nomini
                                                                kiriting</label>
                                                            <input class="form-control" type="text" name="title" value="{{title}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh haqida malumot
                                                                kiriting</label>
                                                            <textarea class="form-control" name="descr">{{descr}}</textarea>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh tarbiyachisini
                                                                kiriting</label>
                                                            <select class="form-select" name="workers" id="">
                                                                {{#each ../ workers}}
                                                                <option value="{{_id}}">{{fullname}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-primary">Qo'shish</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Bordered Table -->
                                </td>
                                <td>
                                    <button class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#delete{{_id}}">O'chirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="delete{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">O'chirish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h2>Chindan ham ochirmoqchimisiz</h2>
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/admin/group/delete/{{_id}}" method="post">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-danger">O'chirish</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <!-- End Bordered Table -->
                </div>
            </div>
        </div>
    </div>
</section>