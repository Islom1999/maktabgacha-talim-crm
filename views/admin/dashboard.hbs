<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html"></a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">General</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">

                <!-- Sales Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card sales-card">

                        <div class="card-body">
                            <h5 class="card-title">Xodimlar <span>| Soni</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-cart"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>{{data.workersLength}} ta</h6>
                                    <span class="text-success small pt-1 fw-bold">oxirgi oyda</span> <span
                                        class="text-muted small pt-2 ps-1">ishlagan xodimlar</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Sales Card -->

                <!-- Revenue Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card revenue-card">
                        <div class="card-body">
                            <h5 class="card-title">Bolalar <span>| soni</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>{{data.childrenLength}} ta</h6>
                                    <span class="text-success small pt-1 fw-bold">oxirgi oyda</span> <span
                                        class="text-muted small pt-2 ps-1">kelgan bolalar</span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- End Revenue Card -->

                <!-- Customers Card -->
                <div class="col-xxl-3 col-xl-12">

                    <div class="card info-card customers-card">


                        <div class="card-body">
                            <h5 class="card-title">Tushumlar <span>| Bog'cha puli</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>$ {{data.amountTushum}}</h6>
                                    <span class="text-danger small pt-1 fw-bold">oxirgi oyda</span> <span
                                        class="text-muted small pt-2 ps-1">yig'ilgan tushumlar</span>

                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->

                <!-- Customers Card -->
                <div class="col-xxl-3 col-xl-12">

                    <div class="card info-card customers-card">


                        <div class="card-body">
                            <h5 class="card-title">Chiqimalar <span>| Oylik ish haqi</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>$ {{data.amountChiqim}}</h6>
                                    <span class="text-danger small pt-1 fw-bold">oxirgi oyda</span> <span
                                        class="text-muted small pt-2 ps-1">xodimlar ish haqi</span>

                                </div>
                            </div>

                        </div>
                    </div>

                </div><!-- End Customers Card -->

            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Xodimlar</h2>
                    <p>Xodimlar ro'yhati</p>
                    <!-- Bordered Table -->
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ism Familiya</th>
                                <th scope="col">Lavozimi</th>
                                <th scope="col">Tugulgan sana</th>
                                <th scope="col">Ish boshlagan sanasi</th>
                                <th scope="col">Oyligi</th>
                                <th scope="col">Guruhlari</th>
                                <th scope="col">O'zgartirish</th>
                                <th scope="col">O'chirish</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each workers}}
                            <tr>
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{fullname}}</td>
                                <td>{{status}}</td>
                                <td>{{dateBirth}}</td>
                                <td>{{dateOld}}</td>
                                <td>{{amount}}</td>
                                <td>
                                    {{#each groups}}
                                    <li>{{title}}</li>
                                    {{/each}}
                                </td>
                                <td>
                                    <button class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#update-{{_id}}">O'zgartirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="update-{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Qo'shish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <form action="/admin/worker/update/{{_id}}" method="post">
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Ism familiyasi</label>
                                                            <input class="form-control" type="text" name="fullname"
                                                                value="{{fullname}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Lavozimi</label>
                                                            <input class="form-control" type="text" name="status"
                                                                value="{{status}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Tugulgan sanasi</label>
                                                            <input class="form-control" type="date" name="dateBirth"
                                                                value="{{dateBirth}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">ish boshlagan
                                                                sanasi</label>
                                                            <input class="form-control" type="date" name="dateOld"
                                                                value="{{dateOld}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Oyligi</label>
                                                            <input class="form-control" type="number" name="amount"
                                                                value="{{amount}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruhlari</label>
                                                            <select class="form-select" name="groups" id="">
                                                                {{#each ../ groups}}
                                                                <option value="{{_id}}">{{title}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>


                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-primary">Qo'shish</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Bordered Table -->
                                </td>
                                <td>
                                    <button class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#delete{{_id}}">O'chirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="delete{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">O'chirish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h2>Chindan ham ochirmoqchimisiz</h2>
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/admin/worker/delete/{{_id}}" method="post">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-danger">O'chirish</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <!-- End Bordered Table -->
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Groups</h2>
                    <p>Guruhlar ro'yhati</p>
                    <!-- Bordered Table -->
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nomi</th>
                                <th scope="col">Guruh haqida malumot</th>
                                <th scope="col">Tarbiyachi</th>
                                <th scope="col">O'zgartirish</th>
                                <th scope="col">O'chirish</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each groups}}
                            <tr>
                                <th scope="row">{{@index}}</th>
                                <td>{{title}}</td>
                                <td>{{descr}}</td>
                                <td>{{workers.fullname}}</td>
                                <td>
                                    <button class="btn btn-primary" data-bs-toggle="modal"
                                        data-bs-target="#update-{{_id}}">O'zgartirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="update-{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Qo'shish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <form action="/admin/group/update/{{_id}}" method="post">
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh nomini
                                                                kiriting</label>
                                                            <input class="form-control" type="text" name="title"
                                                                value="{{title}}">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh haqida malumot
                                                                kiriting</label>
                                                            <textarea class="form-control"
                                                                name="descr">{{descr}}</textarea>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label" for="">Guruh tarbiyachisini
                                                                kiriting</label>
                                                            <select class="form-select" name="workers" id="">
                                                                {{#each ../ workers}}
                                                                <option value="{{_id}}">{{fullname}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-primary">Qo'shish</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Bordered Table -->
                                </td>
                                <td>
                                    <button class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#delete{{_id}}">O'chirish</button>
                                    <!-- Modal -->
                                    <div class="modal fade" id="delete{{_id}}" tabindex="-1"
                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">O'chirish</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h2>Chindan ham ochirmoqchimisiz</h2>
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/admin/group/delete/{{_id}}" method="post">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Qaytish</button>
                                                        <button type="submit" class="btn btn-danger">O'chirish</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <!-- End Bordered Table -->
                </div>
            </div>
        </div>
    </div>
</section>